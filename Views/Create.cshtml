@model BankAccountManagement.Models.BankAccount

<h2>Crear Cuenta Bancaria</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Nombre del Titular:</label>
        <input asp-for="AccountHolder" />
        <span asp-validation-for="AccountHolder" class="text-danger"></span>
    </div>
    <div>
        <label>Tipo de Cuenta:</label>
        <input asp-for="AccountType" />
        <span asp-validation-for="AccountType" class="text-danger"></span>
    </div>
    <div>
        <label>Saldo Inicial:</label>
        <input asp-for="InitialBalance" type="number" />
        <span asp-validation-for="InitialBalance" class="text-danger"></span>
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit">Crear</button>
</form>
